<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg"%>
<table class="table">
    <tbody>
       <tr></tr>
       <tr>
          <th>name</th>
          <td><%= user.name %></td>
          <!--fucurrent.user-->
       </tr>
       <tr>
          <th>introduction</th>
          <td><%= user.introduction %></td>
        </tr>
     </tbody>
 </table>
 <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
 <h2>New book</h2>
 <%= form_for(book) do |f| %>

     <h4>Title</h4>
     <%= f.text_field :title %>
  
     <h4>Opinion</h4>
     <%= f.text_area :body %>
  
     <%= f.submit 'Create Book' %>
  
 <% end %>
</div>
