
<div class="body">
   <p id="notice"><%=  notice %></p>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="container">
      <div class="row">
        <%= render "users/userinfo", book: @book, user: @user %> 
        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @books.each do |book| %>
              <tbody>
                <tr>
                  <th>
                    <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
                    <% end %>
                  </th>
                  <th><%= book.title %></th>
                  <th><%= book.body %></th>
                  <th colspan="3"></th>
                  </tr>
                </tbody>
            <% end %>
          </table>
        </div>
        </div>
</div>
