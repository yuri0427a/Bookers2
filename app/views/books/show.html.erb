<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
<tbody>
  <tr>
  <th><%= link_to @book.user.name, user_path(@book.user.id) %></th>
  <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg"%></th>
  <th><%= @book.title %></th>
  <th><%= @book.body %></th>
  <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
  <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>"本当に削除しますか？" %></th>
  </tr>
</tbody>
</table>
</div>
