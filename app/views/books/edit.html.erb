<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h1>Editing Book</h1>
         <%= form_for(@book) do |f| %>
         <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit '保存' %>   
         <% end %>
         <%= link_to "Show", book_path %>
         |
         <%= link_to "Back", "#" %>
      </div>
    </div>
</div>